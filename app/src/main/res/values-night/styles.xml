<resources>

    <!-- Base application theme - Material 3 Dark -->
    <style name="AppTheme" parent="Theme.Material3.Dark">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryContainer">@color/colorAccentDark</item>
        <!-- Background and surface -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
    </style>

</resources>
