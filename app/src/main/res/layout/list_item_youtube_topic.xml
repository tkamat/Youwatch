<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surfaceColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/youtubeLogo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/yt_icon"
            android:contentDescription="YouTube" />

        <TextView
            android:id="@+id/topic_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Topic Title"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/textPrimary"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/enabled_switch"
            app:layout_constraintStart_toEndOf="@id/youtubeLogo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Gaming Videos" />

        <TextView
            android:id="@+id/minimum_views"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Views"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/textSecondary"
            app:layout_constraintEnd_toStartOf="@id/enabled_switch"
            app:layout_constraintStart_toEndOf="@id/youtubeLogo"
            app:layout_constraintTop_toBottomOf="@id/topic_text"
            tools:text="100,000 views minimum" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/enabled_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>


