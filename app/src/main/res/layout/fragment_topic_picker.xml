<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="0dp"
            android:inputType="text"
            android:hint="@string/hint_topic"
            android:layout_height="wrap_content"
            android:id="@+id/text_topic" android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_views"
            app:layout_constraintLeft_toRightOf="@+id/view_hint"
            android:layout_marginLeft="16dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/text_topic"/>
    <TextView
            android:text="@string/hint_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/view_hint"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_topic"
            android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent" android:textSize="14sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matches_per_month"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/view_hint"/>
</android.support.constraint.ConstraintLayout>

